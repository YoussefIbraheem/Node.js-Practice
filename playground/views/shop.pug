extends ./layouts/main.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://i.imgflip.com/1f52gp.jpg?a481824")
                        div.card__content
                            h2.product__price YOUR SOUL
                            p.product__description SOMEDAY YOU WILL ANSWER FOR YOUR ACTIONS AND GOD WILL NOT BE SO... MERCIFUL.
                        .card__actions
                            button.btn  REPENT   
        else
            h1 No Products    

